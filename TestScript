-- Créer un ScreenGui pour afficher le menu
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui

-- Créer la frame principale du menu
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 400)
frame.Position = UDim2.new(0.5, -125, 0.5, -200)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Parent = screenGui

-- Titre du menu
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 40)
titleLabel.Text = "Mega Cheat by Myster78950"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 18
titleLabel.TextAlignment = Enum.TextAlignment.Center
titleLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
titleLabel.Parent = frame

-- Créer un bouton Fly
local flyButton = Instance.new("TextButton")
flyButton.Size = UDim2.new(0, 220, 0, 50)
flyButton.Position = UDim2.new(0.5, -110, 0, 60)
flyButton.Text = "Fly (ON/OFF)"
flyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
flyButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
flyButton.Parent = frame

local flying = false
flyButton.MouseButton1Click:Connect(function()
    flying = not flying
    if flying then
        -- Activer le fly (remplace par un vrai script de Fly)
        print("Fly activated!")
        -- Code pour activer le fly ici
    else
        -- Désactiver le fly
        print("Fly deactivated!")
        -- Code pour désactiver le fly ici
    end
end)

-- Créer un bouton Speed
local speedButton = Instance.new("TextButton")
speedButton.Size = UDim2.new(0, 220, 0, 50)
speedButton.Position = UDim2.new(0.5, -110, 0, 120)
speedButton.Text = "Speed (ON/OFF)"
speedButton.TextColor3 = Color3.fromRGB(255, 255, 255)
speedButton.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
speedButton.Parent = frame

local speeding = false
speedButton.MouseButton1Click:Connect(function()
    speeding = not speeding
    if speeding then
        -- Activer la vitesse (ajuste la vitesse du joueur)
        print("Speed activated!")
        -- Code pour augmenter la vitesse ici
    else
        -- Désactiver la vitesse
        print("Speed deactivated!")
        -- Code pour revenir à la vitesse normale ici
    end
end)

-- Créer un bouton GodMode
local godModeButton = Instance.new("TextButton")
godModeButton.Size = UDim2.new(0, 220, 0, 50)
godModeButton.Position = UDim2.new(0.5, -110, 0, 180)
godModeButton.Text = "GodMode (ON/OFF)"
godModeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
godModeButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
godModeButton.Parent = frame

local godMode = false
godModeButton.MouseButton1Click:Connect(function()
    godMode = not godMode
    if godMode then
        -- Activer GodMode (rendre invincible)
        print("GodMode activated!")
        -- Code pour rendre le joueur invincible ici
    else
        -- Désactiver GodMode
        print("GodMode deactivated!")
        -- Code pour enlever l'invincibilité ici
    end
end)

-- Créer un bouton Toggle Menu (ouvrir/fermer le menu)
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 220, 0, 50)
toggleButton.Position = UDim2.new(0.5, -110, 0, 240)
toggleButton.Text = "Toggle Menu"
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
toggleButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
toggleButton.Parent = frame

toggleButton.MouseButton1Click:Connect(function()
    -- Permet de fermer ou ouvrir le menu
    frame.Visible = not frame.Visible
end)
