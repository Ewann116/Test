-- ðŸ“Œ HD Admin Ultimate Hack Menu
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- ðŸ“Œ CrÃ©ation du menu GUI avec un design hacking pro
local function createMenu()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game:GetService("CoreGui")

    local Frame = Instance.new("Frame", ScreenGui)
    Frame.Size = UDim2.new(0.4, 0, 0.5, 0)
    Frame.Position = UDim2.new(0.3, 0, 0.2, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    Frame.BorderSizePixel = 2
    Frame.Active = true
    Frame.Draggable = true  -- Menu dÃ©plaÃ§able

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.1, 0)
    Title.Text = "ðŸ’€ Ultimate Hack Menu ðŸ’€"
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Title.Font = Enum.Font.Code
    Title.TextSize = 22

    -- ðŸ“Œ Barre de commandes type terminal
    local CommandBox = Instance.new("TextBox", Frame)
    CommandBox.Size = UDim2.new(1, -10, 0.1, 0)
    CommandBox.Position = UDim2.new(0, 5, 0.85, -35)
    CommandBox.Text = ">>> Entrez une commande"
    CommandBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    CommandBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    CommandBox.Font = Enum.Font.Code
    CommandBox.TextSize = 16
    CommandBox.ClearTextOnFocus = false

    -- ðŸ“Œ ScrollingFrame pour afficher les logs des commandes
    local LogFrame = Instance.new("ScrollingFrame", Frame)
    LogFrame.Size = UDim2.new(1, 0, 0.7, 0)
    LogFrame.Position = UDim2.new(0, 0, 0.1, 0)
    LogFrame.CanvasSize = UDim2.new(0, 0, 2, 0)
    LogFrame.ScrollBarThickness = 10
    LogFrame.BackgroundTransparency = 1

    local function AddLog(text)
        local LogLabel = Instance.new("TextLabel", LogFrame)
        LogLabel.Size = UDim2.new(1, 0, 0.1, 0)
        LogLabel.Text = text
        LogLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        LogLabel.BackgroundTransparency = 1
        LogLabel.Font = Enum.Font.Code
        LogLabel.TextSize = 16
        LogFrame.CanvasSize = UDim2.new(0, 0, math.max(2, LogFrame.CanvasSize.Y.Offset + 0.1), 0)
    end

    -- ðŸ“Œ Commandes du menu
    local flying = false
    local speed = 16
    local noclip = false
    local flyVelocity

    CommandBox.FocusLost:Connect(function()
        local command = CommandBox.Text
        CommandBox.Text = ">>> " .. command
        AddLog(command)

        if command == "fly" then
            flying = not flying
            if flying then
                flyVelocity = Instance.new("BodyVelocity")
                flyVelocity.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
                flyVelocity.Parent = humanoidRootPart
                RunService.RenderStepped:Connect(function()
                    if flying then
                        local moveDir = Vector3.new(0, 0, 0)
                        if UserInputService:IsKeyDown(Enum.KeyCode.W) then
                            moveDir = moveDir + (workspace.CurrentCamera.CFrame.LookVector * 5)
                        end
                        if UserInputService:IsKeyDown(Enum.KeyCode.Space) then
                            moveDir = moveDir + Vector3.new(0, 10, 0)
                        end
                        flyVelocity.Velocity = moveDir
                    end
                end)
            else
                if flyVelocity then flyVelocity:Destroy() end
            end
        elseif command == "speed+" then
            speed = speed + 10
            character:FindFirstChildOfClass("Humanoid").WalkSpeed = speed
            AddLog("Vitesse augmentÃ©e Ã  " .. speed)
        elseif command == "noclip" then
            noclip = not noclip
            RunService.Stepped:Connect(function()
                if noclip then
                    for _, part in pairs(character:GetDescendants()) do
                        if part:IsA("BasePart") then
                            part.CanCollide = false
                        end
                    end
                end
            end)
            AddLog("Noclip " .. (noclip and "activÃ©" or "dÃ©sactivÃ©"))
        else
            AddLog("Commande inconnue")
        end
    end)

    print("âœ… Ultimate Hack Menu Loaded! Use loadstring() to execute.")
end

-- ðŸ“Œ Assurer que le menu est recrÃ©Ã© aprÃ¨s chaque reset
player.CharacterAdded:Connect(function()
    character = player.Character or player.CharacterAdded:Wait()
    humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    createMenu()
end)

-- ðŸ“Œ CrÃ©er initialement le menu
createMenu()
