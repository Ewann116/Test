-- üìå Script Dev BY Myster78950 - Ultimate Hacking Menu
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- üìå Cr√©ation du menu hacking pro
local function createMenu()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game:GetService("CoreGui")

    local Frame = Instance.new("Frame", ScreenGui)
    Frame.Size = UDim2.new(0.5, 0, 0.6, 0)
    Frame.Position = UDim2.new(0.25, 0, 0.2, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    Frame.BorderSizePixel = 2
    Frame.Active = true
    Frame.Draggable = true

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.1, 0)
    Title.Text = "üíÄ Script Dev BY Myster78950 üíÄ"
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    Title.Font = Enum.Font.Code
    Title.TextSize = 24

    -- üìå Barre de recherche
    local SearchBox = Instance.new("TextBox", Frame)
    SearchBox.Size = UDim2.new(1, -10, 0.08, 0)
    SearchBox.Position = UDim2.new(0, 5, 0.12, 0)
    SearchBox.Text = "üîç Rechercher une commande"
    SearchBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    SearchBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    SearchBox.Font = Enum.Font.Code
    SearchBox.TextSize = 18
    SearchBox.ClearTextOnFocus = true

    -- üìå ScrollingFrame pour afficher toutes les commandes
    local CommandFrame = Instance.new("ScrollingFrame", Frame)
    CommandFrame.Size = UDim2.new(1, 0, 0.7, 0)
    CommandFrame.Position = UDim2.new(0, 0, 0.22, 0)
    CommandFrame.CanvasSize = UDim2.new(0, 0, 2, 0)
    CommandFrame.ScrollBarThickness = 10
    CommandFrame.BackgroundTransparency = 1

    local function AddCommandButton(command)
        local Button = Instance.new("TextButton", CommandFrame)
        Button.Size = UDim2.new(1, 0, 0.08, 0)
        Button.Text = command
        Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        Button.TextColor3 = Color3.fromRGB(0, 255, 0)
        Button.Font = Enum.Font.Code
        Button.TextSize = 18
    end

    local commands = {"fly", "speed+", "speed-", "noclip", "invisible", "godmode"}
    for _, cmd in ipairs(commands) do
        AddCommandButton(cmd)
    end

    -- üìå Filtrage des commandes
    SearchBox.Changed:Connect(function()
        for _, button in ipairs(CommandFrame:GetChildren()) do
            if button:IsA("TextButton") then
                button.Visible = string.find(string.lower(button.Text), string.lower(SearchBox.Text)) ~= nil
            end
        end
    end)

    print("‚úÖ Script Dev BY Myster78950 Loaded! Use loadstring() to execute.")
end

-- üìå Assurer que le menu est recr√©√© apr√®s chaque reset
player.CharacterAdded:Connect(function()
    character = player.Character or player.CharacterAdded:Wait()
    humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    createMenu()
end)

-- üìå Cr√©er initialement le menu
createMenu()
