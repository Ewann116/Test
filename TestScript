local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- ðŸ“Œ CrÃ©ation du menu hacking pro
local function createMenu()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game:GetService("CoreGui")

    local Frame = Instance.new("Frame", ScreenGui)
    Frame.Size = UDim2.new(0.5, 0, 0.7, 0)
    Frame.Position = UDim2.new(0.25, 0, 0.15, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    Frame.BorderSizePixel = 2
    Frame.Active = true
    Frame.Draggable = true

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.1, 0)
    Title.Text = "ðŸ’€ Script Dev BY Myster78950 ðŸ’€"
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    Title.Font = Enum.Font.Code
    Title.TextSize = 24

    -- ðŸ“Œ ScrollingFrame pour afficher toutes les commandes
    local CommandFrame = Instance.new("ScrollingFrame", Frame)
    CommandFrame.Size = UDim2.new(1, 0, 0.85, 0)
    CommandFrame.Position = UDim2.new(0, 0, 0.12, 0)
    CommandFrame.CanvasSize = UDim2.new(0, 0, 3, 0)
    CommandFrame.ScrollBarThickness = 10
    CommandFrame.BackgroundTransparency = 1

    local function AddCommandButton(command)
        local Button = Instance.new("TextButton", CommandFrame)
        Button.Size = UDim2.new(1, 0, 0.05, 0)
        Button.Text = command
        Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        Button.TextColor3 = Color3.fromRGB(0, 255, 0)
        Button.Font = Enum.Font.Code
        Button.TextSize = 18
    end

    local commands = {"Fly", "Speed+", "Speed-", "Noclip", "Invisible", "Godmode", "ESP", "Aimbot", "Wallhack", "Teleport", "Kill All", "Infinite Jump", "Super Jump", "No Recoil", "Triggerbot", "Bunny Hop", "Fake Lag", "Auto Clicker", "X-Ray Vision", "Rapid Fire", "Silent Aim", "Spinbot", "Third Person", "Remove Fog"}
    for _, cmd in ipairs(commands) do
        AddCommandButton(cmd)
    end

    print("âœ… Script Dev BY Myster78950 Loaded! Use loadstring() to execute.")
end

-- ðŸ“Œ Assurer que le menu est recrÃ©Ã© aprÃ¨s chaque reset
player.CharacterAdded:Connect(function()
    character = player.Character or player.CharacterAdded:Wait()
    humanoidRootPart = character:WaitForChild("HumanoidRootPart")
