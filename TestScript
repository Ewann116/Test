-- Créer un menu admin compatible avec Solara
local player = game.Players.LocalPlayer

-- Créer la GUI du menu
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 400)
frame.Position = UDim2.new(0.5, -150, 0.5, -200)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Parent = screenGui

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 50)
titleLabel.Text = "Admin Menu"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 22
titleLabel.TextAlignment = Enum.TextAlignment.Center
titleLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
titleLabel.Parent = frame

-- Bouton pour activer le vol
local flyButton = Instance.new("TextButton")
flyButton.Size = UDim2.new(0, 280, 0, 50)
flyButton.Position = UDim2.new(0.5, -140, 0, 80)
flyButton.Text = "Activate Fly"
flyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
flyButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
flyButton.Parent = frame

flyButton.MouseButton1Click:Connect(function()
    -- Code pour activer le vol
    print(player.Name .. " activated Fly!")
    -- Implémente le vol ici (utilisation de BodyVelocity ou autres méthodes)
end)

-- Bouton pour activer la vitesse
local speedButton = Instance.new("TextButton")
speedButton.Size = UDim2.new(0, 280, 0, 50)
speedButton.Position = UDim2.new(0.5, -140, 0, 150)
speedButton.Text = "Activate Speed"
speedButton.TextColor3 = Color3.fromRGB(255, 255, 255)
speedButton.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
speedButton.Parent = frame

speedButton.MouseButton1Click:Connect(function()
    -- Code pour augmenter la vitesse
    print(player.Name .. " activated Speed!")
    -- Implémente la vitesse ici (par exemple, augmenter le WalkSpeed)
end)

-- Bouton pour activer GodMode
local godModeButton = Instance.new("TextButton")
godModeButton.Size = UDim2.new(0, 280, 0, 50)
godModeButton.Position = UDim2.new(0.5, -140, 0, 220)
godModeButton.Text = "Activate GodMode"
godModeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
godModeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
godModeButton.Parent = frame

godModeButton.MouseButton1Click:Connect(function()
    -- Code pour activer GodMode
    print(player.Name .. " activated GodMode!")
    -- Implémente GodMode ici (par exemple, rendre le joueur invincible)
end)

-- Bouton pour fermer le menu
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 280, 0, 50)
closeButton.Position = UDim2.new(0.5, -140, 0, 290)
closeButton.Text = "Close Menu"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
closeButton.Parent = frame

closeButton.MouseButton1Click:Connect(function()
    -- Fermer le menu admin
    screenGui:Destroy()
end)
