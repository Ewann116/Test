local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- ðŸ“Œ Fonction pour crÃ©er le menu
local function createMenu()
    -- Supprimer l'ancien menu s'il existe
    if game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI") then
        game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI"):Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ScriptDevGUI"
    ScreenGui.Parent = game:GetService("CoreGui")

    local Frame = Instance.new("Frame", ScreenGui)
    Frame.Size = UDim2.new(0.3, 0, 0.5, 0)
    Frame.Position = UDim2.new(0.35, 0, 0.25, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    Frame.BorderSizePixel = 2
    Frame.Active = true
    Frame.Draggable = true

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.15, 0)
    Title.Text = "ðŸ’€ Script Dev BY Myster78950 ðŸ’€"
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    Title.Font = Enum.Font.Code
    Title.TextSize = 22

    -- ðŸ“Œ Ajout des boutons
    local function CreateButton(text, position, callback)
        local Button = Instance.new("TextButton", Frame)
        Button.Size = UDim2.new(1, -10, 0.08, 0)
        Button.Position = UDim2.new(0, 5, position, 0)
        Button.Text = text
        Button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        Button.TextColor3 = Color3.fromRGB(0, 255, 0)
        Button.Font = Enum.Font.Code
        Button.TextSize = 18
        Button.MouseButton1Click:Connect(callback)
    end

    -- ðŸ“Œ Fly parfait (style HD Admin)
    local flying = false
    local flySpeed = 50
    local function toggleFly()
        flying = not flying
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        if flying then
            humanoid.PlatformStand = true
            local BodyGyro = Instance.new("BodyGyro", humanoidRootPart)
            local BodyVelocity = Instance.new("BodyVelocity", humanoidRootPart)
            BodyGyro.P = 9e4
            BodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
            BodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
            RunService.RenderStepped:Connect(function()
                if flying then
                    BodyGyro.CFrame = workspace.CurrentCamera.CFrame
                    BodyVelocity.Velocity = workspace.CurrentCamera.CFrame.LookVector * flySpeed
                else
                    humanoid.PlatformStand = false
                    BodyGyro:Destroy()
                    BodyVelocity:Destroy()
                end
            end)
        end
    end

    CreateButton("Fly (Toggle)", 0.2, toggleFly)
    CreateButton("Augmenter Vitesse Fly", 0.3, function() flySpeed = flySpeed + 10 end)
    CreateButton("Diminuer Vitesse Fly", 0.4, function() flySpeed = flySpeed - 10 end)
    CreateButton("Noclip", 0.5, function() print("Noclip activÃ©") end)
    CreateButton("Godmode", 0.6, function() print("Godmode activÃ©") end)
    CreateButton("Teleport", 0.7, function() print("Teleport activÃ©") end)
    CreateButton("InvisibilitÃ©", 0.8, function() print("InvisibilitÃ© activÃ©e") end)
    CreateButton("ESP", 0.9, function() print("ESP activÃ©") end)
    
    print("âœ… Script Dev BY Myster78950 Loaded! Use loadstring() to execute.")
end

-- ðŸ“Œ Gestion du reset pour rouvrir le menu
player.CharacterAdded:Connect(function()
    wait(1) -- Attente pour Ã©viter les bugs
    createMenu()
end)

-- ðŸ“Œ Lancer le menu au dÃ©marrage
createMenu()
