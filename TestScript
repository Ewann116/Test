local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- ðŸ“Œ Fonction pour crÃ©er le menu
local function createMenu()
    -- Supprimer l'ancien menu s'il existe
    if game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI") then
        game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI"):Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ScriptDevGUI"
    ScreenGui.Parent = game:GetService("CoreGui")

    local Frame = Instance.new("ScrollingFrame", ScreenGui)
    Frame.Size = UDim2.new(0.3, 0, 0.5, 0)
    Frame.Position = UDim2.new(0.35, 0, 0.25, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    Frame.BorderSizePixel = 2
    Frame.Active = true
    Frame.Draggable = true
    Frame.CanvasSize = UDim2.new(0, 0, 2, 0) -- Permet de scroller en bas
    Frame.ScrollBarThickness = 5 -- Ã‰paisseur de la barre de scroll

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.15, 0)
    Title.Text = "ðŸ’€ Script Dev BY Myster78950 ðŸ’€"
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    Title.Font = Enum.Font.Code
    Title.TextSize = 22

    -- ðŸ“Œ Ajout des boutons amÃ©liorÃ©s
    local function CreateButton(text, position, callback)
        local Button = Instance.new("TextButton", Frame)
        Button.Size = UDim2.new(1, -10, 0.08, 0)
        Button.Position = UDim2.new(0, 5, position, 0)
        Button.Text = text
        Button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        Button.TextColor3 = Color3.fromRGB(0, 255, 0)
        Button.Font = Enum.Font.Code
        Button.TextSize = 18
        Button.MouseButton1Click:Connect(function()
            pcall(callback)
        end)
    end

    -- ðŸ“Œ Fly amÃ©liorÃ© et fluide
    local flying = false
    local flySpeed = 50
    local bodyGyro, bodyVelocity
    local function toggleFly()
        flying = not flying
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")

        if flying then
            humanoid.PlatformStand = true
            bodyGyro = Instance.new("BodyGyro", humanoidRootPart)
            bodyVelocity = Instance.new("BodyVelocity", humanoidRootPart)
            bodyGyro.P = 9e4
            bodyGyro.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
            bodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
            RunService.RenderStepped:Connect(function()
                if flying then
                    bodyGyro.CFrame = workspace.CurrentCamera.CFrame
                    local moveDirection = Vector3.new(0, 0, 0)
                    if UserInputService:IsKeyDown(Enum.KeyCode.W) then
                        moveDirection = moveDirection + (workspace.CurrentCamera.CFrame.LookVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.S) then
                        moveDirection = moveDirection - (workspace.CurrentCamera.CFrame.LookVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.A) then
                        moveDirection = moveDirection - (workspace.CurrentCamera.CFrame.RightVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.D) then
                        moveDirection = moveDirection + (workspace.CurrentCamera.CFrame.RightVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.Space) then
                        moveDirection = moveDirection + Vector3.new(0, flySpeed, 0)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then
                        moveDirection = moveDirection - Vector3.new(0, flySpeed, 0)
                    end
                    bodyVelocity.Velocity = moveDirection
                else
                    humanoid.PlatformStand = false
                    bodyGyro:Destroy()
                    bodyVelocity:Destroy()
                end
            end)
        end
    end

    CreateButton("Fly (Toggle)", 0.2, toggleFly)
    CreateButton("Augmenter Vitesse Fly", 0.3, function() flySpeed = flySpeed + 10 end)
    CreateButton("Diminuer Vitesse Fly", 0.4, function() flySpeed = flySpeed - 10 end)
    CreateButton("Spam Chat", 0.5, function() while true do game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents"):FindFirstChild("SayMessageRequest"):FireServer("HACKED BY MYSTER78950!", "All") wait(1) end end)
    CreateButton("Give Arme", 0.6, function() print("Give Arme activÃ©") end)
    CreateButton("Noclip", 0.7, function() print("Noclip activÃ©") end)
    CreateButton("Godmode", 0.8, function() print("Godmode activÃ©") end)
    CreateButton("Teleport", 0.9, function() print("Teleport activÃ©") end)
    CreateButton("InvisibilitÃ©", 1.0, function() print("InvisibilitÃ© activÃ©e") end)
    CreateButton("ESP", 1.1, function() print("ESP activÃ©") end)
    
    print("âœ… Script Dev BY Myster78950 Loaded! Use loadstring() to execute.")
end

-- ðŸ“Œ Gestion du reset pour rouvrir le menu
player.CharacterAdded:Connect(function()
    wait(1) -- Attente pour Ã©viter les bugs
    createMenu()
end)

-- ðŸ“Œ Lancer le menu au dÃ©marrage
createMenu()
