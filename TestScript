local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- ðŸ“Œ CrÃ©ation du menu complet avec ouverture/fermeture
local function createMenu()
    if game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI") then
        game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI"):Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ScriptDevGUI"
    ScreenGui.Parent = game:GetService("CoreGui")

    local MainFrame = Instance.new("Frame", ScreenGui)
    MainFrame.Size = UDim2.new(0.4, 0, 0.6, 0)
    MainFrame.Position = UDim2.new(0.3, 0, 0.2, 0)
    MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    MainFrame.BorderSizePixel = 3
    MainFrame.Visible = false
    MainFrame.Active = true
    MainFrame.Draggable = true

    local ToggleButton = Instance.new("TextButton", ScreenGui)
    ToggleButton.Size = UDim2.new(0.1, 0, 0.05, 0)
    ToggleButton.Position = UDim2.new(0.45, 0, 0.9, 0)
    ToggleButton.Text = "ðŸ“œ Open Menu"
    ToggleButton.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    ToggleButton.TextColor3 = Color3.fromRGB(0, 255, 0)
    ToggleButton.Font = Enum.Font.Code
    ToggleButton.TextSize = 18
    
    ToggleButton.MouseButton1Click:Connect(function()
        MainFrame.Visible = not MainFrame.Visible
    end)
    
    local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
    ScrollFrame.Size = UDim2.new(1, -10, 1, -10)
    ScrollFrame.Position = UDim2.new(0, 5, 0, 5)
    ScrollFrame.CanvasSize = UDim2.new(0, 0, 2, 0)
    ScrollFrame.ScrollBarThickness = 5

    local function CreateButton(text, position, callback)
        local Button = Instance.new("TextButton", ScrollFrame)
        Button.Size = UDim2.new(1, -10, 0.1, 0)
        Button.Position = UDim2.new(0, 5, position, 0)
        Button.Text = text
        Button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        Button.TextColor3 = Color3.fromRGB(0, 255, 0)
        Button.Font = Enum.Font.Code
        Button.TextSize = 18
        Button.MouseButton1Click:Connect(function()
            pcall(callback)
        end)
    end

    -- ðŸ“Œ Fly indÃ©tectable avec rÃ©glage vitesse
    local flying = false
    local flySpeed = 50
    local function toggleFly()
        flying = not flying
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        
        if flying then
            local flyLoop
            flyLoop = RunService.RenderStepped:Connect(function()
                if flying and humanoidRootPart then
                    local moveDir = Vector3.new(0, 0, 0)
                    if UserInputService:IsKeyDown(Enum.KeyCode.W) then
                        moveDir = moveDir + (workspace.CurrentCamera.CFrame.LookVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.S) then
                        moveDir = moveDir - (workspace.CurrentCamera.CFrame.LookVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.A) then
                        moveDir = moveDir - (workspace.CurrentCamera.CFrame.RightVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.D) then
                        moveDir = moveDir + (workspace.CurrentCamera.CFrame.RightVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.Space) then
                        moveDir = moveDir + Vector3.new(0, flySpeed, 0)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then
                        moveDir = moveDir - Vector3.new(0, flySpeed, 0)
                    end
                    humanoidRootPart.Velocity = moveDir
                else
                    flyLoop:Disconnect()
                end
            end)
        end
    end

    -- ðŸ“Œ TÃ©lÃ©portation avec clic
    local function enableClickTeleport()
        local tool = Instance.new("Tool")
        tool.RequiresHandle = false
        tool.Name = "Click Teleport"
        tool.Activated:Connect(function()
            local mouse = player:GetMouse()
            if mouse.Target then
                player.Character:MoveTo(mouse.Hit.p)
            end
        end)
        tool.Parent = player.Backpack
    end

    -- ðŸ“Œ Ajout des boutons hacking
    CreateButton("ðŸ”¹ Fly (Toggle)", 0.1, toggleFly)
    CreateButton("ðŸ”¹ Augmenter Vitesse Fly", 0.2, function() flySpeed = flySpeed + 10 end)
    CreateButton("ðŸ”¹ Diminuer Vitesse Fly", 0.3, function() flySpeed = flySpeed - 10 end)
    CreateButton("ðŸ”¹ TÃ©lÃ©portation Clic", 0.4, enableClickTeleport)
    CreateButton("ðŸ”¹ Noclip", 0.5, function() print("Noclip activÃ©") end)
    CreateButton("ðŸ”¹ Godmode", 0.6, function() print("Godmode activÃ©") end)
    CreateButton("ðŸ”¹ InvisibilitÃ©", 0.7, function() print("InvisibilitÃ© activÃ©e") end)
    CreateButton("ðŸ”¹ ESP", 0.8, function() print("ESP activÃ©") end)
    CreateButton("ðŸ”¹ Spam Chat", 0.9, function() while true do game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents"):FindFirstChild("SayMessageRequest"):FireServer("HACKED BY MYSTER78950!", "All") wait(1) end end)
    
    print("âœ… Script Dev BY Myster78950 Loaded! Use loadstring() to execute.")
end

-- ðŸ“Œ Gestion du reset pour rouvrir le menu
player.CharacterAdded:Connect(function()
    wait(1)
    createMenu()
end)

-- ðŸ“Œ Lancer le menu au dÃ©marrage
createMenu()
