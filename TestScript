local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- ðŸ“Œ CrÃ©ation du menu ultra stylÃ©
local function createMenu()
    if game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI") then
        game:GetService("CoreGui"):FindFirstChild("ScriptDevGUI"):Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ScriptDevGUI"
    ScreenGui.Parent = game:GetService("CoreGui")

    local Frame = Instance.new("ScrollingFrame", ScreenGui)
    Frame.Size = UDim2.new(0.35, 0, 0.6, 0)
    Frame.Position = UDim2.new(0.325, 0, 0.2, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    Frame.BorderSizePixel = 3
    Frame.Active = true
    Frame.Draggable = true
    Frame.CanvasSize = UDim2.new(0, 0, 2.5, 0)
    Frame.ScrollBarThickness = 5

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.1, 0)
    Title.Text = "ðŸ’€ Script Dev BY Myster78950 ðŸ’€"
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    Title.Font = Enum.Font.Code
    Title.TextSize = 22

    -- ðŸ“Œ Fonction pour crÃ©er un bouton stylÃ©
    local function CreateButton(text, position, callback)
        local Button = Instance.new("TextButton", Frame)
        Button.Size = UDim2.new(1, -10, 0.08, 0)
        Button.Position = UDim2.new(0, 5, position, 0)
        Button.Text = text
        Button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        Button.TextColor3 = Color3.fromRGB(0, 255, 0)
        Button.Font = Enum.Font.Code
        Button.TextSize = 18
        Button.MouseButton1Click:Connect(function()
            pcall(callback)
        end)
    end

    -- ðŸ“Œ Fly indÃ©tectable
    local flying = false
    local flySpeed = 50
    local function toggleFly()
        flying = not flying
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
        
        if flying then
            local flyLoop
            flyLoop = RunService.RenderStepped:Connect(function()
                if flying and humanoidRootPart then
                    local moveDir = Vector3.new(0, 0, 0)
                    if UserInputService:IsKeyDown(Enum.KeyCode.W) then
                        moveDir = moveDir + (workspace.CurrentCamera.CFrame.LookVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.S) then
                        moveDir = moveDir - (workspace.CurrentCamera.CFrame.LookVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.A) then
                        moveDir = moveDir - (workspace.CurrentCamera.CFrame.RightVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.D) then
                        moveDir = moveDir + (workspace.CurrentCamera.CFrame.RightVector * flySpeed)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.Space) then
                        moveDir = moveDir + Vector3.new(0, flySpeed, 0)
                    end
                    if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then
                        moveDir = moveDir - Vector3.new(0, flySpeed, 0)
                    end
                    humanoidRootPart.Velocity = moveDir
                else
                    flyLoop:Disconnect()
                end
            end)
        end
    end

    -- ðŸ“Œ TÃ©lÃ©portation avec un outil
    local function enableClickTeleport()
        local tool = Instance.new("Tool")
        tool.RequiresHandle = false
        tool.Name = "Click Teleport"
        tool.Activated:Connect(function()
            local mouse = player:GetMouse()
            if mouse.Target then
                player.Character:MoveTo(mouse.Hit.p)
            end
        end)
        tool.Parent = player.Backpack
    end

    -- ðŸ“Œ Ajout des boutons
    CreateButton("ðŸ”¹ Fly (Toggle)", 0.2, toggleFly)
    CreateButton("ðŸ”¹ Augmenter Vitesse Fly", 0.3, function() flySpeed = flySpeed + 10 end)
    CreateButton("ðŸ”¹ Diminuer Vitesse Fly", 0.4, function() flySpeed = flySpeed - 10 end)
    CreateButton("ðŸ”¹ TÃ©lÃ©portation Clic", 0.5, enableClickTeleport)
    CreateButton("ðŸ”¹ Noclip", 0.6, function() print("Noclip activÃ©") end)
    CreateButton("ðŸ”¹ Godmode", 0.7, function() print("Godmode activÃ©") end)
    CreateButton("ðŸ”¹ InvisibilitÃ©", 0.8, function() print("InvisibilitÃ© activÃ©e") end)
    CreateButton("ðŸ”¹ ESP", 0.9, function() print("ESP activÃ©") end)
    CreateButton("ðŸ”¹ Spam Chat", 1.0, function() while true do game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents"):FindFirstChild("SayMessageRequest"):FireServer("HACKED BY MYSTER78950!", "All") wait(1) end end)
    
    print("âœ… Script Dev BY Myster78950 Loaded! Use loadstring() to execute.")
end

